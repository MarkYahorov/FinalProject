<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="100dp">

    <ImageView
        android:id="@+id/imageTaskForRecycler"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/regular"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="15dp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textOfTaskForRecycler"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="44dp"
        android:text="@string/hello_blank_fragment"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@id/imageTaskForRecycler"
        app:layout_constraintTop_toTopOf="@+id/imageTaskForRecycler"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>